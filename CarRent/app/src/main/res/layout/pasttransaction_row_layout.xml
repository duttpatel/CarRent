<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.6"
                android:text="Transaction Number : "
                android:textSize="19dp"
                android:textColor="@color/textcolor"/>
            <TextView
                android:id="@+id/past_id_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.6"
                android:text="Pickup Date : "
                android:textSize="19dp"
                android:textColor="@color/textcolor"/>
            <TextView
                android:id="@+id/past_pickupdate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="12/12/1994"
                android:textColor="@color/textcolor"
                android:textSize="19dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.6"
                android:text="Return Date : "
                android:textSize="19dp"
                android:textColor="@color/textcolor"/>
            <TextView
                android:id="@+id/past_returndate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="12/12/1994"
                android:textColor="@color/textcolor"
                android:textSize="19dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.6"
                android:text="Due Amount : "
                android:textSize="19dp"
                android:textColor="@color/textcolor"/>
            <TextView
                android:id="@+id/past_amount_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="500"
                android:textColor="@color/btnbackground"
                android:textSize="19dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.6"
                android:text="Payment Status : "
                android:textSize="19dp"
                android:textColor="@color/textcolor"/>

            <TextView
                android:id="@+id/past_status_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:text="Not Paid"
                android:textColor="@color/textcolor"
                android:textSize="19dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>