<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/row_car_img"
            android:layout_width="405dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/bookcar"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                android:layout_weight="0.1">
                <TextView
                    android:id="@+id/row_carname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Honda City"
                    android:textSize="12pt"
                    android:textColor="@color/textcolor"
                    />
                <TextView
                    android:id="@+id/row_seat_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Seats : 7"
                    android:textSize="9pt"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/row_mileage_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Mileage : 50"
                    android:textSize="9pt"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/row_geartype_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Gear : Auto"
                    android:textSize="9pt"
                    android:textColor="@color/textcolor"/>
                <TextView
                    android:id="@+id/row_carid_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/row_car_img"
                    android:layout_alignStart="@+id/row_geartype_txt" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/row_rate1_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Rate"
                    android:textSize="10pt"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/row_car_img"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    />
                <TextView
                    android:id="@+id/row_rate_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="100/day"
                    android:textSize="15pt"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/row_car_img"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
