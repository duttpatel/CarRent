<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/userhome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/userhome_toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/userhome_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bookcar"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:text="Pick Up location"
            android:textSize="15dp"
            android:textColor="@color/textcolor"/>
            <Spinner
                android:id="@+id/userhome_pick_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                android:background="#85dcdcdc">
            </Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:text="Return location"
                android:textSize="15dp"
                android:textColor="@color/textcolor"/>
            <Spinner
                android:id="@+id/userhome_return_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                android:background="#85dcdcdc">
            </Spinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="13dp">
                <LinearLayout
                    android:id="@+id/userhome_pickdate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.1">
                    <TextView
                        android:id="@+id/userhome_pickdate_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="Pick Date"
                        android:textSize="15dp"
                        android:textColor="@color/textcolor"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/userhome_pickdate_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textSize="40dp"
                            android:textColor="@color/btnbackground"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/userhome_pickmonth_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="month"
                                android:textSize="20dp"
                                android:textColor="@color/textcolor"
                                android:textAlignment="center"/>
                            <TextView
                                android:id="@+id/userhome_pickyear_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="year"
                                android:textSize="20dp"
                                android:textColor="@color/textcolor"
                                android:textAlignment="center"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/userhome_returndate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.1">
                <TextView
                    android:id="@+id/userhome_returndate_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Return Date"
                    android:textSize="15dp"
                    android:textColor="@color/textcolor"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/userhome_returndate_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textSize="40dp"
                            android:textColor="@color/btnbackground"
                            android:textAlignment="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/userhome_returnmonth_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="month"
                                android:textSize="20dp"
                                android:textColor="@color/textcolor"
                                android:textAlignment="center"/>
                            <TextView
                                android:id="@+id/userhome_returnyear_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="year"
                                android:textSize="20dp"
                                android:textColor="@color/textcolor"
                                android:textAlignment="center"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="13dp">
                <Spinner
                    android:id="@+id/userhome_picktime_txt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.1">
                </Spinner>
                <Spinner
                    android:id="@+id/userhome_returntime_txt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:layout_marginLeft="10dp">
                </Spinner>
            </LinearLayout>
            <Button
                android:id="@+id/userhome_getcar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="Search Car"
                android:textColor="@color/btntext"
                android:textSize="15dp"
                android:background="@color/btnbackground"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>


